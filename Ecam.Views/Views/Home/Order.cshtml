@{ Layout = null; }
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-left m-r-15">
                <input type="text" class="form-control input-sm" placeholder="Target %" data-bind="value:target_percentage,valueUpdate:'keyup'" />
            </div>
            <div class="pull-left m-l-15">
                <input type="text" class="form-control input-sm" placeholder="Stop Loss %" data-bind="value:stop_loss_percentage,valueUpdate:'keyup'" />
            </div><div class="clearfix"></div>
        </div>
        <div class="clearfix">&nbsp;</div>
        <table id="OrderTable" class="table table-striped table-bordered table-hover table-condensed table-gray" style="width:1024px;">
            <thead>
                <tr>
                    <th>
                        Company
                    </th>
                    <th class="text-right text-nowrap" style="width:100px;">
                        Quantity
                    </th>
                    <th class="text-right text-nowrap" style="width:100px;">
                        Price
                    </th>
                    <th class="text-left text-nowrap" style="width:130px;">
                        Type
                    </th>
                    <th class="text-right text-nowrap" style="width:130px;">
                        Target
                    </th>
                    <th class="text-right text-nowrap" style="width:130px;">
                        Stop Loss
                    </th>
                    <th style="width: 50px">
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach:rows">
                <tr>
                    <td>
                        <input type="text" class="form-control input-sm" data-bind="value:symbol" />
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" data-bind="value:quantity,valueUpdate:'keyup'" />
                    </td>
                    <td>
                        <input type="text" class="form-control input-sm" data-bind="value:price,valueUpdate:'keyup'" />
                    </td>
                    <td>
                        <select class="form-control" data-bind="value:type">
                            <option value="BS">Buy To Sell</option>
                            <option value="SB">Sell To Buy</option>
                        </select>
                    </td>
                    <td data-bind="text:formatNumber(target(),2)" class="text-right"></td>
                    <td data-bind="text:formatNumber(stop_loss(),2)" class="text-right"></td>
                    <td style="vertical-align:top;" class="text-center">
                        <a href="javascript:;" class="cursor-pointer fg-black btn-delete" data-placement="top"><i class="fa fa-times p-t-10"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
        <div>
            <button type="button" class="btn btn-primary btn-sm" data-bind="click:addOrder">Add</button>
        </div>
    </div>
</div> 