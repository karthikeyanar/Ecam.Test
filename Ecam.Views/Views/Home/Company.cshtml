<script type="text/html" id="modal-template">
    <div id="modal-${name}" class="modal {{if is_modal_full==true}}container{{/if}} {{if position=='top'}}modal-top{{/if}}" tabindex="-1" data-focus-on="input:first" data-width="1200" style="display: none;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">${title}</h4>
        </div>
        <div class="modal-body">
            <div class="edit-cnt p-10">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" class="form-horizontal form-validate" role="form" onsubmit="return false" data-bind="formValidate:{}">
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Company Name
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="company_name" data-bind="value:company_name" placeholder="Company Name" data-rule-required="true" data-msg-required="Required" data-placement="bottom" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Symbol
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="symbol" data-bind="value:symbol" placeholder="Symbol" data-rule-required="true" data-msg-required="Required" data-placement="bottom" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Category
                                </label>
                                <div class="col-md-7">
                                    <input type="hidden" name="category_name" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Moneycontrol URL
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="money_control_url"
                                           data-bind="value:money_control_url" placeholder="Moneycontrol URL"  />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Moneycontrol Symbol
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="money_control_symbol"
                                           data-bind="value:money_control_symbol" placeholder="Moneycontrol Symbol" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    NSE Type
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="nse_type"
                                           data-bind="value:nse_type" placeholder="NSE Type" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    &nbsp;
                                </label>
                                <div class="col-md-8">
                                    <div class="pull-left">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="is_nifty_50" id="is_nifty_50" value="true" data-bind="checked:is_nifty_50,checkedValue:true" /> Nifty 50
                                            </label>
                                        </div>
                                    </div>
                                    <div class="pull-left m-l-15">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="is_nifty_100" id="is_nifty_100" value="true" data-bind="checked:is_nifty_100,checkedValue:true" /> Nifty 100
                                            </label>
                                        </div>
                                    </div>
                                    <div class="pull-left m-l-15">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="is_nifty_200" id="is_nifty_200" value="true" data-bind="checked:is_nifty_200,checkedValue:true" /> Nifty 200
                                            </label>
                                        </div>
                                    </div>
                                    <div class="pull-left m-l-15">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" name="is_old" id="is_old" value="true" data-bind="checked:is_old,checkedValue:true" /> Old
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8">
                                    <input type="hidden" name="id" data-bind="value:id" />
                                    <button type="submit" id="save" class="btn btn-sm btn-primary" data-loading-text="Save">Save</button>
                                    <button type="button" class="btn btn-sm btn-danger m-l-15" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>
