                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2011)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2012)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2013)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2014)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2015)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2016)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(percentage_2017)"></div>
                    </td>
