@{ Layout = null; }
<div class="page-header">
    <div class="col-md-12 no-padding m-b-10 border-white header p-b-10">
        <form id="frmCompanySearch" class="form-inline form-validate" role="form" onsubmit="return false">
            <div class="form-group" style="margin-left:10px; margin-right:10px;float:left;">
                <h1 class="page-title" style="margin-top:-4px;">Companies</h1>
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="hidden" name="symbols" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="hidden" name="categories" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="text" name="from_price" class="form-control input-sm" placeholder="From Price" style="width:100px" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="text" name="to_price" class="form-control input-sm" placeholder="To Price" style="width:100px" />
            </div>
            <div class="clearfix"></div>
            <div class="m-l-15">
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_book_mark" /> Show Book Mark
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_50" /> Nifty 50
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_100" /> Nifty 100
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_200" /> Nifty 200
                        </label>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="m-l-15">
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low" /> All Time Low Last Month
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high" /> All Time High Last Month
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low_15_days" /> All Time Low 15 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high_15_days" /> All Time High 15 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <button type="button" id="btn" class="btn btn-success btn-sm" data-bind="click:refresh">Refresh</button>
                </div>
            </div>
        </form>
    </div>
</div>
<div class="row" id="Company">
    <div class="col-md-12">
        <div class="row m-b-5">
            <div class="col-md-12">
                <div class="pull-right">
                    <button id="add" class="btn btn-sm btn-primary btn-add">Add</button>
                </div>
                <div class="pull-right m-r-15">
                    <button id="export" class="btn btn-sm btn-success btn-export">Export</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="pull-left m-r-15">
                    <span class="pull-left p-t-5 p-r-10">Rows</span>
                    <select id="rows" name="rows" class="pull-left form-control input-sm input-60">
                        <option value="10">10</option>
                        <option value="50">50</option>
                        <option value="200" selected>200</option>
                        <option value="500">500</option>
                    </select>
                </div>
                <div class="pull-left">
                    <span id="paging_status" class="pull-left m-t-5"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="pull-right">
                    <ul class="manual-pagination no-margin"></ul>
                </div>
            </div>
            <input type="hidden" name="page_index" value="1" />
            <input type="hidden" name="sort_name" value="day_5_percentage" />
            <input type="hidden" name="sort_order" value="desc" />
        </div>
        <table id="CompanyTable" class="table table-striped table-bordered table-hover table-condensed table-gray">
            <thead>
                <tr>
                    <th style="width: 50px" sortname="is_book_mark">
                        Mark
                    </th>
                    <th sortname="company_name">
                        Company
                    </th>
                    <th sortname="symbol">
                        Symbol
                    </th>
                    <th>
                        Category
                    </th>
                    <th sortname="ltp_price" class="text-right text-nowrap">
                        LTP
                    </th>
                    <th sortname="prev_percentage" class="text-right text-nowrap">
                        Change %
                    </th>
                    <th sortname="day_5_percentage" class="text-right text-nowrap">5D</th>
                    <th sortname="day_10_percentage" class="text-right text-nowrap">10D</th>
                    <th sortname="day_15_percentage" class="text-right text-nowrap">15D</th>
                    <th sortname="day_20_percentage" class="text-right text-nowrap">20D</th>
                    <th sortname="day_25_percentage" class="text-right text-nowrap">25D</th>
                    <th sortname="day_30_percentage" class="text-right text-nowrap">30D</th>
                    <th sortname="day_60_percentage" class="text-right text-nowrap">60D</th>
                    <th sortname="day_90_percentage" class="text-right text-nowrap">90D</th>
                    <th sortname="week_52_low" class="text-right text-nowrap">W52Low</th>
                    <th sortname="week_52_low_percentage" class="text-right text-nowrap">W52L%</th>
                    <th sortname="week_52_high" class="text-right text-nowrap">W52High</th>
                    <th sortname="week_52_percentage" class="text-right text-nowrap">W52H%</th>
                    <th style="width: 50px">
                    </th>
                    <th style="width: 50px">
                    </th>
                </tr>
            </thead>
            <tbody data-bind="foreach:rows">
                <tr>
                    <td style="text-align:center;">
                        <a href="javascript:;" class="is-book-mark">
                            <i data-bind="css:{'fa-bookmark fg-primary': cBool(is_book_mark)==true,'fa-bookmark-o': cBool(is_book_mark)==false}" class="fa fa-bookmark"></i>
                        </a>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit" data-bind="text:company_name"></td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit" data-bind="text:symbol"></td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit" data-bind="text:category_name"></td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatNumber(ltp_price)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(prev_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(prev_price)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_5_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_5)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_10_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_10)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_15_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_15)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_20_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_20)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_25_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_25)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_30_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_30)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_60_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_60)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(day_90_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(day_90)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right" data-bind="text:formatNumber(week_52_low)"></td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(week_52_low_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(week_52_low)"></div>
                    </td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right" data-bind="text:formatNumber(week_52_high)"></td>
                    <td style="vertical-align:top;" class="cursor-pointer btn-edit text-right">
                        <div data-bind="text:formatPercentage(week_52_percentage)"></div>
                        <div class="font-11" data-bind="text:formatNumber(week_52_high)"></div>
                    </td>
                    <td style="text-align:center;white-space:nowrap;width:120px;">
                        <div class="pull-left m-l-15">
                            <a data-bind="attr:{'href': 'https://www.google.co.in/search?q=NSE:'+symbol.replace('&','%26')}" target="_blank">G</a>
                        </div>
                        <div class="pull-left m-l-15">
                            <a data-bind="attr:{'href': 'https://www.nseindia.com/live_market/dynaContent/live_watch/get_quote/GetQuote.jsp?symbol='+symbol.replace('&','%26')}" target="_blank">NSE</a>
                        </div>
                        <div class="pull-left m-l-15">
                            <a data-bind="attr:{'href': 'http://economictimes.indiatimes.com/markets/technical-charts?symbol='+symbol.replace('&','%26')+'EQ&exchange=NSE&entity=company'}" target="_blank">ET</a>
                        </div><div class="clearfix"></div>
                    </td>
                    <td style="vertical-align:top;" class="text-center">
                        <a href="javascript:;" class="cursor-pointer fg-black btn-delete" data-placement="top"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="modal-container">
</div>
<!-- /ko -->
<script type="text/html" id="modal-template">
    <div id="modal-${name}" class="modal {{if is_modal_full==true}}container{{/if}} {{if position=='top'}}modal-top{{/if}}" tabindex="-1" data-focus-on="input:first" data-width="800" style="display: none;">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">${title}</h4>
        </div>
        <div class="modal-body">
            <div class="edit-cnt p-10">
                <div class="row">
                    <div class="col-md-12">
                        <form method="post" class="form-horizontal form-validate" role="form" onsubmit="return false" data-bind="formValidate:{}">
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Company Name
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="company_name" data-bind="value:company_name" placeholder="Company Name" data-rule-required="true" data-msg-required="Required" data-placement="bottom" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Symbol
                                </label>
                                <div class="col-md-7">
                                    <input type="text" class="form-control input-sm" name="symbol" data-bind="value:symbol" placeholder="Symbol" data-rule-required="true" data-msg-required="Required" data-placement="bottom" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-4 control-label">
                                    Category
                                </label>
                                <div class="col-md-7">
                                    <input type="hidden" name="category_name" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-4 col-md-8"> 
                                    <input type="hidden" name="id" data-bind="value:id" />
                                    <button type="submit" id="save" class="btn btn-sm btn-primary" data-loading-text="Save">Save</button>
                                    <button type="button" class="btn btn-sm btn-danger m-l-15" data-dismiss="modal">Cancel</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>