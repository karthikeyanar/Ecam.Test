@{ Layout = null; }
<div class="page-header">
    <div class="col-md-12 no-padding m-b-10 border-white header p-b-10">
        <form id="frmCompanySearch" class="form-inline form-validate" role="form" onsubmit="return false">
            <div class="form-group" style="margin-left:10px; margin-right:10px;float:left;">
                <h1 class="page-title" style="margin-top:-4px;">Companies</h1>
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="hidden" name="symbols" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="hidden" name="categories" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="hidden" name="mf_ids" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="text" name="from_price" class="form-control input-sm" placeholder="From Price" style="width:100px" />
            </div>
            <div class="form-group m-r-10 m-t-10">
                <input type="text" name="to_price" class="form-control input-sm" placeholder="To Price" style="width:100px" />
            </div>
            <div class="clearfix"></div>
            <div class="m-l-15">
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_archive" /> Show Archive
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_book_mark" /> Show Book Mark
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_50" /> Nifty 50
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_100" /> Nifty 100
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_nifty_200" /> Nifty 200
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_old" /> Old
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_mf" /> MF Stock
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_book_mark_category" checked /> Book Mark Category
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_category" /> All Category
                        </label>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="m-l-15">
                <div class="form-group m-r-10 m-t-10">
                    <input type="text" name="where_condition" class="form-control input-sm" style="width:900px;" placeholder="Where condition" />
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <input type="text" name="positive_percentage" class="form-control input-sm" placeholder="Positive Percentage" />
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <input type="text" name="avg" class="form-control input-sm" placeholder="AVG" />
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <button type="button" id="btn" class="btn btn-success btn-sm" data-bind="click:refresh">Refresh</button>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <button type="button" id="btnLog" class="btn btn-primary btn-sm" data-bind="click:openLog">Log</button>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <button type="button" id="btnMCDownload" class="btn btn-danger btn-sm">MC Quaterly Downloaded</button>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <button type="button" id="btnInvestingNifty500" class="btn btn-danger btn-sm">Investing Nifty500</button>
                </div>
            </div>
            <div class="m-l-15" style="display:none;">
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low" />Low Last Month
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high" />High Last Month
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low_15_days" /> Low 15 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high_15_days" /> High 15 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low_5_days" /> Low 5 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high_5_days" /> High 5 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_low_2_days" /> Low 2 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_all_time_high_2_days" /> High 2 Days
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_sell_to_buy" /> Sell To Buy
                        </label>
                    </div>
                </div>
                <div class="form-group m-r-10 m-t-10">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" id="is_buy_to_sell" /> Buy To Sell
                        </label>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>
